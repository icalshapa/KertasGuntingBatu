<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red"
    tools:context=".ui.splashscreen.SplashscreenActivity">

    <ImageView
        android:layout_width="@dimen/_180sdp"
        android:layout_height="@dimen/_180sdp"
        android:src="@drawable/ic_splash_screen"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.72"
        android:id="@+id/iv_splash_screen"/>

    <ImageView
        android:layout_width="@dimen/_180sdp"
        android:layout_height="@dimen/_180sdp"
        android:background="@drawable/bg_weapon_ii"
        app:layout_constraintLeft_toLeftOf="@id/iv_splash_screen"
        app:layout_constraintRight_toRightOf="@id/iv_splash_screen"
        app:layout_constraintBottom_toTopOf="@id/iv_splash_screen"
        android:id="@+id/iv_splash_title"/>

</androidx.constraintlayout.widget.ConstraintLayout>